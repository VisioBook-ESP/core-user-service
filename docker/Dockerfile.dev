# Dev: hot-reload, volume mount, deps de dev
FROM python:3.12-slim AS dev
WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Outils utiles si compilation de wheels
RUN apt-get update && apt-get install -y --no-install-recommends build-essential \
    && rm -rf /var/lib/apt/lists/*

# Cache pip
RUN --mount=type=cache,target=/root/.cache/pip true

COPY requirements.txt ./
RUN pip install -U pip && pip install -r requirements.txt

# On copie le code pour un premier build; en dev on montera un volume
COPY app ./app

EXPOSE 8080

# Hot reload sur le dossier app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080", "--reload", "--reload-dir", "app"]
