# -------- Build stage --------
FROM python:3.12-slim AS builder
WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Cache pip
RUN --mount=type=cache,target=/root/.cache/pip true

COPY requirements.txt .
RUN python -m venv /venv && /venv/bin/pip install -U pip \
    && /venv/bin/pip install --no-cache-dir -r requirements.txt

COPY . .

# -------- Production stage --------
FROM python:3.12-slim AS production
WORKDIR /app

# Ajoute libs runtime et outils n√©cessaires
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    iputils-ping \
    && rm -rf /var/lib/apt/lists/*

RUN addgroup --system appgroup && adduser --system --uid 1001 --ingroup appgroup appuser

COPY --from=builder /venv /venv
COPY --from=builder /app/app ./app
COPY --from=builder /app/tests ./tests
COPY --from=builder /app/alembic ./alembic
COPY --from=builder /app/alembic.ini ./alembic.ini

# Give appuser write permissions to the working directory
RUN chown -R appuser:appgroup /app

ENV PATH=/venv/bin:$PATH \
    PYTHONPATH=/app

USER appuser
EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
  CMD python -c "import urllib.request,sys; sys.exit(0) if urllib.request.urlopen('http://localhost:8080/health').getcode()==200 else sys.exit(1)"

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"]
