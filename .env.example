# Exemple de fichier d'environnement pour core-user-service
# Copiez ce fichier vers .env et ajustez les valeurs selon vos besoins

# Application
SERVICE_NAME=core-user-service
SERVICE_VERSION=1.0.0
ENV=dev
PORT=8080
LOG_LEVEL=info

# Base de données
# Pour développement local avec Docker Compose
DATABASE_URL=postgresql://visiobook_user:visiobook_pass@localhost:5432/visiobook_users
DATABASE_ECHO=false

# Pour tests en CI (sera surchargé automatiquement)
# DATABASE_URL=postgresql://test_user:test_password@postgres:5432/test_db

# Sécurité (CHANGEZ EN PRODUCTION !)
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (origines autorisées)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Configuration Python
PYTHONPATH=/app
PYTHONUNBUFFERED=1
